<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.framgia.alarmclock.ui.activity.MainActivity">

    <ImageView
        android:id="@+id/image_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bar_icon_weather"/>

    <TextView
        android:id="@+id/text_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_weather"
        android:layout_marginTop="@dimen/text_battery_activity_main_marginTop"
        android:layout_toEndOf="@+id/image_weather"/>

    <ImageView
        android:id="@+id/image_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/image_alarm_activity_main_marginBottom"
        android:src="@drawable/bar_icon_alarm"/>

    <ImageView
        android:id="@+id/image_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image_alarm"
        android:src="@drawable/bar_icon_timer"/>

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/image_timer"
        android:src="@drawable/bar_icon_settings"/>

    <ImageView
        android:id="@+id/image_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image_timer"
        android:src="@drawable/bar_icon_help"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/linearLayout_activity_main_paddingEnd"
        android:paddingStart="@dimen/linearLayout_activity_main_paddingStart">

        <TextView
            android:id="@+id/text_hide_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_hide_hour"
            android:textSize="@dimen/text_clock_activity_main_textSize"/>

        <TextView
            android:id="@+id/text_hide_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_hide_second"
            android:textSize="@dimen/text_clock2_activity_main_textSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/linearLayout_activity_main_paddingEnd"
        android:paddingStart="@dimen/linearLayout_activity_main_paddingStart">

        <TextClock
            android:id="@+id/text_clock_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_clock_activity_main_textSize"/>

        <TextClock
            android:id="@+id/text_clock_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_clock2_activity_main_textSize"/>
    </LinearLayout>

</RelativeLayout>
