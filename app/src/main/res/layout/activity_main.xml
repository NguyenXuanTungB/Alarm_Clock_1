<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.framgia.alarmclock.ui.activity.MainActivity">

    <ImageView
        android:id="@+id/image_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bar_icon_weather"/>

    <TextView
        android:id="@+id/text_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_weather"
        android:layout_marginTop="@dimen/text_battery_activity_main_margin_top"
        android:layout_toEndOf="@+id/image_weather"
        android:textSize="@dimen/text_battery_size"/>

    <ImageView
        android:id="@+id/image_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/image_alarm_activity_main_margin_bottom"
        android:src="@drawable/bar_icon_alarm"/>

    <ImageView
        android:id="@+id/image_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image_alarm"
        android:src="@drawable/bar_icon_timer"/>

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/image_timer"
        android:src="@drawable/bar_icon_settings"/>

    <ImageView
        android:id="@+id/image_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image_timer"
        android:src="@drawable/bar_icon_help"/>

    <TextView
        android:id="@+id/text_hide_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/text_hide_hour24"
        android:textSize="@dimen/text_clock_activity_main_text_size"/>

    <TextView
        android:id="@+id/text_hide_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_hide_hour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_hide_second_main_activity_margin_top"
        android:text="@string/text_hide_second"
        android:textSize="@dimen/text_clock2_activity_main_text_size"/>

    <TextClock
        android:id="@+id/text_clock_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_clock_activity_main_text_size"/>

    <TextClock
        android:id="@+id/text_clock_am_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_hide_hour"
        android:layout_alignLeft="@+id/text_hide_hour"
        android:layout_marginBottom="@dimen/text_clock_am_pm_main_activity_margin_bottom"
        android:layout_marginLeft="@dimen/text_clock_am_pm_main_activity_margin_left"
        android:text="@string/text_hide_second"
        android:textSize="@dimen/text_clock3_activity_main_text_size"/>

    <TextClock
        android:id="@+id/text_clock_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_hide_second"
        android:layout_alignLeft="@+id/text_hide_second"
        android:text="@string/text_hide_second"
        android:textSize="@dimen/text_clock2_activity_main_text_size"/>

    <AnalogClock
        android:id="@+id/analog_clock_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:dial="@drawable/analog_clock_no_bound"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_clock_hour"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_day_activity_margin_bottom"
        android:textSize="@dimen/text_clock_widget_clock_text_size"/>

    <ImageView
        android:id="@+id/image_stop_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_timer"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_stop_alarm"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/image_snooze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/image_snooze_activity_main_margin_top"
        android:src="@drawable/icon_snooze"
        android:visibility="invisible"/>

</RelativeLayout>
