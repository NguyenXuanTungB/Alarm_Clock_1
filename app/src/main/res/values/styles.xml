<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="text_view_repeat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/text_repeat_activity_marginStart</item>
        <item name="android:paddingLeft">@dimen/image_functions_setting_activity_paddingLeft</item>
        <item name="android:textSize">@dimen/text_size_functions_setting_activity</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="check_box_repeat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/checkbox_repeat_activity_marginEnd</item>
    </style>

    <style name="layout_repeat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>
</resources>
